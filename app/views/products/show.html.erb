<% content_for(:title, "Products | Mario's Foods") %>



<h1><%= @product.name %></h1>
<br>
<h1>$<%= @product.cost %></h1>
<br>
<h1><%= @product.origin %></h1>
<br>
<hr>
<br>


<% if @product.reviews.any? %>
  <h4>Here are the reviews for this product:</h4>

  <ul>
    <% @product.reviews.each do |review| %>
      <li>
        <h3>Author:</h3> <h4> <%= review.author %> </h4>
        <h4> <%= review.content_body %> </h4>


        <h3>Rating:</h3> <h4><%= review.rating %></h4>
        <br>
        <%= link_to "Delete", product_review_path(@product, review),
                                 :data => {:confirm => "Are you sure?",
                                                :method => "delete"} %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no reviews yet!</p>
<% end %>
<p><%= link_to "Add a review", new_product_review_path(@product) %></p>


<p><%= link_to "Edit", edit_product_path(@product) %></p>
<p><%= link_to "Delete", product_path(@product),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
<br>
<hr>
<p><%= link_to "Return to products", products_path %></p>
